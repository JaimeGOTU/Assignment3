<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--the things that go in the edit page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%=title %></h1>
            <form class="form" method="post">

            <!-- one text field-->
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" 
                        class="form-control" 
                        id="nameTextField" 
                        placeholder="Enter book Title" 
                        name="name" 
                        value="<%= book.name %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" 
                        class="form-control" 
                        id="authorTextField" 
                        placeholder="Enter Author's Name" 
                        name="author" 
                        value="<%= book.author %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="publTextField">Year Publication</label>
                    <input type="text" 
                        class="form-control" 
                        id="publTextField" 
                        placeholder="Enter Year of Publication" 
                        name="published" 
                        value="<%= book.published %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="descTextField">Description</label>
                    <textarea type="text" 
                        class="form-control" 
                        id="descTextField" 
                        placeholder="Describe the book briefly" 
                        name="description" 
                        required>
                        <%= book.description %>
                        </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" 
                        class="form-control" 
                        id="priceTextField"
                        placeholder="Enter Price" 
                        name="price"
                        value="<%= book.price %>" 
                        required>
                </div>

                <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

            </form>
        </div>
    </div>
</div>




<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>