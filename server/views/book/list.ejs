<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!--jumbotron copied from bootstrap 4.0-->  
<main class="container">
    <div class ="row">
        <!-- the col-md-number has to correspond to your total amount of columns later-->
        <div class="col-md-offset-3 col-md-15">
            <h3><%= title %><h3>
            <!--button to redirect to the add view-->
            <a href='/book-list/add' class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i>Add a Book</a>
            <br>
            <br>

        <!--table-->
        <table class= "table table-bordered table-striped table-hover">
        <!--table row-->
        <tr>
        <!--table header-->
            <th class="text-center col-2">Name</th>
            <th class="text-center col-2">Author</th>
            <th class="text-center col-1">Published</th>
            <th class="text-center col-5">Description</th>
            <th class="text-center col-1">Price</th>
            <!--buttons to edit and delete-->
            <th class="text-center col-2"></th>
            <th class="text-center col-2"></th>
        </tr>

        <!-- repeat the template -->
        <% for(let count=0; count < Booklist.length; count++){ %>
            <!-- tr class="d-flex" didnt really work for me-->
            <tr>
                <!--add table data-->
                <td class="text-center col-2"><%= Booklist[count].name %></td>
                <td class="text-center col-2"><%= Booklist[count].author %></td>
                <td class="text-center col-1"><%= Booklist[count].published %></td>
                <td class="text-center col-5"><%= Booklist[count].description %></td>
                <td class="text-center col-1"><%= Booklist[count].price %></td>

                <!-- button to edit a book in the table-->
                <td class="text-center col-1">
                    <a href="/book-list/edit/<%= Booklist[count]._id %>"
                    class ="btn btn-primary">
                    <i class="fas fa-pencil-alt"></id>Edit</a>
                </td>

                <!-- button to delete a book in the table-->
                <td class="text-center col-1">
                    <a href="/book-list/delete/<%= Booklist[count]._id %>"
                    class ="btn btn-danger">
                    <i class="fas fa-trash-alt"></id>Delete</a>
                </td>

            </tr>

        <%} %> 

        </table>
        </div>
        </div>
</main>

<!-- as you can see this one is called here, in order-->
